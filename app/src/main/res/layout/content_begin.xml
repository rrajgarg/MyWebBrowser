<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.myweb.Begin"
    tools:showIn="@layout/app_bar_begin">
    <LinearLayout
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/iAmLinear"
            android:weightSum="10"
            android:orientation="horizontal">
            <EditText
                android:layout_width="0dp"
                android:layout_weight="7"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/find"
                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                android:visibility="gone"
                android:id="@+id/butt"
                android:text="find"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:id="@+id/cross"
                android:background="@drawable/ic_action_navigation_close"/>
        </LinearLayout>

        <WebView
            android:id="@+id/webs"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </WebView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="youtube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/youtube"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="amazon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/amazon"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="gmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gmail"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/google"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="code forces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/code_forces"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    </android.support.constraint.ConstraintLayout>
